
<%= @post.title %><br>
<%= @post.content %>

<% @post.categories.each do |cat|  %>
    <%= cat.name %><br>
<%end%>

Comments:
<%= render 'comment', comment: Comment.new %>

<% @post.comments.each do |comment|%>
    <%= "#{comment.user.username} says: #{comment.content}" %><br>
<%end%>

<% @post.users.uniq.each do |user| %>
    <%= link_to user.username, user %><br>
<% end %>

